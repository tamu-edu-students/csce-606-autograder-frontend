          <li class="nav-item">
            <%= link_to "Course Dashboard", assignments_path, class: "nav-link", data: { turbo: false } %>
          </li>
          <li class="nav-item">
            <%= link_to "Manage Users", users_path, class: "nav-link", data: { turbo: false } %>
          </li>
        <% end %>
      </ul>

      <!-- Right-side Links -->
      <ul class="navbar-nav ms-auto">
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
