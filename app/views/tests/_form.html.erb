<%= form_with(model: [ @assignment, @test ]) do |form| %>
  <% if @test.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h2>
      <ul>
        <% @test.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :points, style: "display: block" %>
    <%= form.number_field :points %>
  </div>

  <div>
    <%= form.label :test_type, style: "display: block" %>
    <%= form.text_field :test_type %>
  </div>

  <div>
    <%= form.label :target, style: "display: block" %>
    <%= form.text_field :target %>
  </div>

  <div>
    <%= form.label :test_code, style: "display: block" %>
    <%= form.text_area :test_code %>
  </div>


  <div>
    <%= form.label :include_files, style: "display: block" %>
    <%= form.text_field :include_files %>
  </div>

  
  <div>
    <%= form.submit %>
  </div>
<% end %>
