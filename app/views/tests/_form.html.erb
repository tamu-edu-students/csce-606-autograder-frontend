<%= form_with(model: [@assignment, @test], local: true, html: { multipart: true }) do |form| %>
  <% if test.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(test.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
        <% test.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :points, style: "display: block" %>
    <%= form.text_field :points %>
  </div>

  <div class="field">
    <%= form.label :test_type %>
    <%= form.select :test_type, options_for_select([['Approved Includes', 'approved_includes'], 
                                                    ['Compile', 'compile'], 
                                                    ['Coverage', 'coverage'], 
                                                    ['I/O', 'i/o'], 
                                                    ['Memory Errors', 'memory_errors'], 
                                                    ['Performance', 'performance'], 
                                                    ['Script', 'script'], 
                                                    ['Style', 'style'], 
                                                    ['Unit', 'unit']], @test.test_type) %>
  </div>

  <div class="field">
    <%= form.label :target, "Upload File" %>
    <%= form.file_field :target %>
  </div>

  <div>
    <%= form.label :include, style: "display: block" %>
    <%= form.text_area :include %>
  </div>

  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label :show_output, style: "display: block" %>
    <%= form.check_box :show_output %>
  </div>

  <div>
    <%= form.label :skip, style: "display: block" %>
    <%= form.check_box :skip %>
  </div>

  <div>
    <%= form.label :timeout, style: "display: block" %>
    <%= form.text_field :timeout %>
  </div>

  <div>
    <%= form.label :visibility, style: "display: block" %>
    <%= form.text_field :visibility %>
  </div>

  <div>
    <%= form.label :assignment_id, style: "display: block" %>
    <%= form.text_field :assignment_id %>
  </div>

  <div class="field">
    <%= form.label :actual_test, "Actual Test" %>
    <%= form.text_area :actual_test %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
