<div class="form-group mb-3">
  <label>Memory Errors Path</label>
  <div id="memory-errors-container">
    <% if test&.test_block&.dig("file_paths").present? %>
      <% test.test_block["file_paths"].each_with_index do |path, index| %>
        <div class="file-path-field">
          <input type="text" 
                 name="test[test_block][file_paths][]" 
                 class="form-control mb-2" 
                 placeholder="Enter Memory Errors Path" 
                 value="<%= path %>">
        </div>
      <% end %>
    <% else %>
      <!-- Display one empty field if no source paths exist yet -->
      <input type="text" 
             name="test[test_block][file_paths][]" 
             class="form-control mb-2" 
             placeholder="Enter Memory Errors Path">
    <% end %>
  </div>
  <button type="button" class="btn btn-secondary mt-2" onclick="addMemoryErrorsPathField()">Add Memory Errors Path</button>
</div>