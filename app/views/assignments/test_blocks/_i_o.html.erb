<div class="form-group mb-3">
  <label for="input_path">Input Path</label>
  <input type="text" 
         id="test_block_input_path" 
         name="test[test_block][input_path]" 
         class="form-control" 
         placeholder="Enter Input Path" 
         value="<%= test&.test_block&.dig('input_path') %>">
  <div id="input-file-tree-dropdown" class="dropdown-content" style="display: none;">
  <%= render "assignments/file_selection_tree", 
  files: @files || [], 
  dropdown_id: "input-file-tree-dropdown", 
  radio_fields: ["input-file-tree-dropdown", "output-file-tree-dropdown", "main-path-file-tree-dropdown"] %>
</div>
</div>

<div class="form-group mt-5">
  <label for="output_path">Output Path</label>
  <input type="text" 
         id="test_block_output_path" 
         name="test[test_block][output_path]" 
         class="form-control" 
         placeholder="Enter Output Path" 
         value="<%= test&.test_block&.dig('output_path') %>">
  <div id="output-file-tree-dropdown" class="dropdown-content" style="display: none;">
    <%= render "assignments/file_selection_tree", files: @files, dropdown_id: "output-file-tree-dropdown", radio_fields: ["input-file-tree-dropdown", "output-file-tree-dropdown", "main-path-file-tree-dropdown"] %>
  </div>
</div>
